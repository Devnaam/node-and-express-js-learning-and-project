<%- include('partials/header') %>
<div class="max-w-2xl mx-auto bg-gray-50 dark:bg-gray-800 shadow-lg rounded-lg p-6">
  <h2 class="text-2xl font-extrabold mb-4 text-gray-800 dark:text-white">Edit Note</h2>
  <form action="/edit/<%= note.id %>" method="POST" class="space-y-4">
    <div>
      <label for="title" class="block text-gray-700 dark:text-gray-300 font-semibold">Title</label>
      <input type="text" id="title" name="title" value="<%= note.title %>" class="w-full p-2 rounded-lg border border-gray-200 dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-500">
    </div>
    <div>
      <label for="content" class="block text-gray-700 dark:text-gray-300 font-semibold">Content</label>
      <textarea id="content" name="content" rows="5" class="w-full p-2 rounded-lg border border-gray-200 dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-500"><%= note.content %></textarea>
    </div>
    <div>
      <label for="tags" class="block text-gray-700 dark:text-gray-300 font-semibold">Tags (comma-separated)</label>
      <input type="text" id="tags" name="tags" value="<%= note.tags.join(', ') %>" class="w-full p-2 rounded-lg border border-gray-200 dark:bg-gray-700 dark:text-white dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-teal-500">
    </div>
    <button type="submit" class="bg-teal-700 text-white px-4 py-2 rounded-lg hover:bg-teal-800 transition">Update Note</button>
  </form>
</div>
<%- include('partials/footer') %>